# Mulesoft Authentication
# Your Mulesoft client credentials from Anypoint Platform
MULESOFT_CLIENT_ID=your-client-id-here
MULESOFT_CLIENT_SECRET=your-client-secret-here

# Mulesoft Environment
# Your organization and environment IDs from Anypoint Platform
MULESOFT_ORG_ID=your-org-id
MULESOFT_ENV_ID=your-env-id

# Control Plane Configuration
# Available values: us, eu1, gov
MULESOFT_CONTROL_PLANE=us

# Monitoring Configuration
# Interval in seconds between checks
CHECK_INTERVAL_SECONDS=300

# SMTP Configuration
# Email server settings for alerts
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_SENDER=alerts@yourdomain.com

# Patterns Configuration
# JSON file containing patterns to monitor
PATTERNS_FILE=patterns.json

# Debug Configuration
# Set to true to enable verbose logging
VERBOSE_LOGGING=false